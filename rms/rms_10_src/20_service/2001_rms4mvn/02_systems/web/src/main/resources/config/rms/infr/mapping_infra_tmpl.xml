<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.neoye.rms.domain.infrastructure.sys.repo.TmplRepo" >

	<resultMap type="com.neoye.rms.domain.infrastructure.sys.intf.dto.TmplDTO" id="tmplDTO">
		<result column="tmpl_id" property="tmplId" jdbcType="INTEGER" />
		<result column="tmpl_key" property="tmplKey" jdbcType="VARCHAR" />
		<result column="tmpl_value" property="tmplValue" jdbcType="VARCHAR" />
	</resultMap>
	
	<resultMap type="com.neoye.rms.domain.infrastructure.sys.intf.dto.TmplSrvitemDTO" id="tmplSrvitemDTO">
		<result column="tmpl_id" property="tmplId" jdbcType="INTEGER" />
		<result column="tmpl_type" property="tmplType" jdbcType="VARCHAR" />
		<result column="server_item_id" property="serverItemId" jdbcType="VARCHAR" />
		<result column="in_use" property="inUse" jdbcType="INTEGER" />
	</resultMap>
	
	<select id="retrieveTemplate" resultMap="tmplDTO"
		parameterType="com.neoye.rms.domain.infrastructure.sys.intf.dto.TmplDTO">
		SELECT tmpl_id, tmpl_key, tmpl_value FROM nmcm_tmpl_int WHERE 1 = 1
		<if test="tmplKey !=null and '' != tmplKey"> AND tmpl_key = #{tmplKey}</if>
		<if test="tmplId != null and '' != tmplId and '-1' != tmplId"> AND tmpl_id = #{tmplId,typeHandler=com.neoye.rms.domain.infrastructure.base.typehandler.String2IntTypeHandler}</if>
	</select>
	
	<select id="retrieveTmplIdBySevItem" resultType="java.lang.Integer"
		parameterType="com.neoye.rms.domain.infrastructure.sys.intf.dto.TmplSrvitemDTO">
		select tmpl_id from nmal_tmpl_sevitem_cft where server_item_id = #{serverItemId,typeHandler=com.neoye.rms.domain.infrastructure.base.typehandler.String2IntTypeHandler}
		AND tmpl_type = #{tmplType} AND in_use = 1
	</select>

</mapper>