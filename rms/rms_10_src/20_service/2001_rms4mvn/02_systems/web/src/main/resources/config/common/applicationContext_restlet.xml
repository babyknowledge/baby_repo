<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>

<beans>
	<bean name="component" id="component" autowire="byName"
		class="org.restlet.ext.spring.SpringComponent">
		<property name="defaultTarget" ref="application" />
	</bean>

	<bean name="application" id="application"
		class="org.restlet.Application">
		<property name="inboundRoot" ref="router" />
	</bean>

	<bean name="router" class="org.restlet.ext.spring.SpringBeanRouter"></bean>
</beans> 